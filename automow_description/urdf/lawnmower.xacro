<?xml version="1.0"?>

<robot>
    <material name="Green">
        <color rgba="0.0 0.8 0.0 1.0"/>
    </material>
    <material name="Red">
        <color rgba="0.8 0.0 0.0 1.0"/>
    </material>
    <material name="White">
        <color rgba="1.0 1.0 1.0 1.0"/>
    </material>
    <material name="Blue">
        <color rgba="0.0 0.0 0.8 1.0"/>
    </material>

    <property name="M_PI" value="3.14159"/>

    <macro name="automow">
        <!-- base_footprint is a ficticious frame on the ground below base_link
             for the navigation stack to properly function -->
        <link name="base_footprint">
            <inertial>
                <mass value="0.0001" />
                <origin xyz="0 0 0" />
                <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
                         iyy="0.0001" iyz="0.0"
                         izz="0.0001" />
             </inertial>

             <visual>
                 <origin xyz="0 0 0" rpy="0 0 0" />
                 <geometry>
                     <box size="0.001 0.001 0.001" />
                 </geometry>
                 <material name="Green" />
             </visual>

             <collision>
                  <origin xyz="0 0 0" rpy="0 0 0" />
                 <geometry>
                     <box size="0.001 0.001 0.001" />
                 </geometry>
             </collision>
         </link>

         <!-- base_link is the origin for all of the coordinates on the robot.
              For our case, this will be centered under the wheels of the
              robot. -->
         <link name="base_link">
             <inertial>
                 <mass value="100" />
                 <origin xyz="0 0 0.063" />
                 <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                          iyy="1.0" iyz="0.0"
                          izz="1.0" />
              </inertial>

              <visual>
                  <origin xyz="0 0 0.0308" rpy="0 0 0" />
              </visual>
          </link>

          <link name="left_wheel_link"/>
          <link name="right_wheel_link"/>
          <link name="laser" />
          <link name="ahrs" />
          
          
          <joint name="base_footprint_joint" type="fixed">
              <parent link="base_footprint"/>
              <child link="base_link"/>
          </joint>

          <joint name="left_wheel_joint" type="continuous">
              <parent link="base_link"/>
              <child link="left_wheel_link"/>
          </joint>

          <joint name="right_wheel_joint" type="continuous">
              <parent link="base_link"/>
              <child link="right_wheel_link"/>
          </joint>

          <joint name="laser_joint" type="fixed">
              <parent link="base_link" />
              <child link="laser" />
          </joint>
          <joint name="ahrs_joint" type="fixed">
              <parent link="base_link" />
              <child link="ahrs" />
          </joint>

          <link name="kinect_link">
              <inertial>
                  <mass value="0.00001" />
                  <origin xyz="0 0 0" />
                  <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                          iyy="1.0" iyz="0.0"
                          izz="1.0" />
              </inertial>
              <visual>
                  <origin xyz="0 0 0" rpy="0 0 0"/>
                  <geometry>
                      <mesh
                          filename="package://automow_description/meshes/kinect.dae"/>
                  </geometry>
              </visual>
              <collision>
                  <origin xyz="0 0 0" rpy="0 0 0"/>
                  <geometry>
                      <box size="0.0730 0.2760 0.0720"/>
                  </geometry>
              </collision>
          </link>

          <link name="kinect_depth_frame">
              <inertial>
                  <mass value="0.000001" />
                  <origin xyz="0 0 0" />
                  <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                          iyy="1.0" iyz="0.0"
                          izz="1.0" />
              </inertial>
          </link>
 
          <link name="kinect_depth_optical_frame">
              <inertial>
                  <mass value="0.000001" />
                  <origin xyz="0 0 0" />
                  <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                          iyy="1.0" iyz="0.0"
                          izz="1.0" />
              </inertial>
          </link>
 
          <link name="kinect_rgb_frame">
              <inertial>
                  <mass value="0.000001" />
                  <origin xyz="0 0 0" />
                  <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                          iyy="1.0" iyz="0.0"
                          izz="1.0" />
              </inertial>
          </link>
 
          <link name="kinect_rgb_optical_frame">
               <inertial>
                  <mass value="0.000001" />
                  <origin xyz="0 0 0" />
                  <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                          iyy="1.0" iyz="0.0"
                          izz="1.0" />
              </inertial>
          </link>
 

          <joint name="base_kinect_joint" type="fixed">
          </joint>

          <joint name="kinect_depth_joint" type="fixed">
              <parent link="kinect_link" />
              <child link="kinect_depth_frame" />
          </joint>

          <joint name="kinect_depth_optical_joint" type="fixed">
              <origin xyz="0 0 0" rpy="${-M_PI/2} 0 ${M_PI/2}"/>
              <parent link="kinect_depth_frame" />
              <child link="kinect_depth_optical_frame" />
          </joint>

          <joint name="kinect_rgb_joint" type="fixed">
              <origin xyz="0 -0.005 0" rpy="0 0 0" />
              <parent link="kinect_link" />
              <child link="kinect_rgb_frame" />
          </joint>

          <joint name="kinect_rgb_optical_joint" type="fixed">
              <origin xyz="0 0 0" rpy="${-M_PI/2} 0 ${M_PI/2}"/>
              <parent link="kinect_rgb_frame" />
              <child link="kinect_rgb_optical_frame" />
          </joint>

      </macro>
  </robot>




