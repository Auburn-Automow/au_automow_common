<launch>
        <param name="robot_description" command="cat $(find automow-urdf)/automow.xml" />
        <node pkg="robot_state_publisher" type="state_publisher" name="automow" />
	<node pkg="automow-urdf" type="state_publisher" name="joint_state_pub" />
        <node pkg="robot_pose_ekf" type="robot_pose_ekf" name="robot_pose_ekf" output="screen">
                <param name="freq" value="30.0"/>
                <param name="sensor_timeout" value="1.0"/>
                <param name="publish_tf" value="true"/>
                <param name="odom_used" value="true"/>
                <param name="imu_used" value="false"/>
                <param name="vo_used" value="false"/>
		<remap from="/odom" to="/base_odom"/>
		<remap from="vo" to="gps_odom" />
        </node>
</launch>
