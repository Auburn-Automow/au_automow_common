<launch>
    <!-- Setup Map server -->
    <node name="map_server" pkg="map_server" type="map_server" args="$(find 2dnav_automow)/map_server.yaml">
        <param name="frame_id" type="str" value="/odom_combined" />
    </node>
    
    <!-- Start the ACML Node -->
    <include file="$(find amcl)/examples/amcl_omni.launch" />
    
    <!-- Start the move_base Node -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <rosparam file="$(find 2dnav_automow)/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find 2dnav_automow)/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find 2dnav_automow)/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find 2dnav_automow)/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find 2dnav_automow)/base_local_planner_params.yaml" command="load" />
    </node>
</launch>
